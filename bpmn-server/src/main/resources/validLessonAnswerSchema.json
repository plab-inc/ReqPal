{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "answers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "questionId": {
            "type": "string"
          },
          "options": {
            "anyOf": [
              {
                "type": "null"
              },
              {
                "type": "string"
              },
              {
                "type": "boolean"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              {
                "type": "object"
              }
            ]
          },
          "type": {
            "type": "string",
            "enum": ["TrueOrFalse", "MultipleChoice", "Slider", "Requirement"]
          }
        },
        "required": ["questionId", "options", "type"]
      }
    }
  },
  "required": ["answers"]
}
